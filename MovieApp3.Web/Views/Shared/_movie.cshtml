@model Movie



<div class="card mb-3">
    <div class="row">
        <div class="col-md-3">
            <img src="/img/@Model.ImageUrl" alt="@Model.Title" width="180px;" />
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">@Model.Title</p>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.Director</p>
                <p class="card-text">
                    <ul>
                        @foreach (var player in Model.Players)
                        {
                            <li>@player</li>
                        }
                    </ul>
                </p>
            </div>
        </div>
    </div>
</div>