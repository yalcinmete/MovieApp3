@model Movie
<h1>Create Movie</h1>
<hr />

@* <form method="post" action="/movies/create"> *@
<form method="post" asp-controller="Movies" asp-action="Create">
    <div class="form-group">
        @* <label for="Title">Title</label> *@
        <label asp-for="Title"></label> @* //Title text'ini' yazmaya gerek kalmadı. *@
        @* <input type="text" name="Title" class="form-control"/> *@ @* bu yöntemle yukarı model eklemeye gerek yok   *@
        <input asp-for="Title" class="form-control" /> @*  //tag helper kullanmak icin viewımporta addHelper ile ekledik *@
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        @* <label for="Description">Description</label> *@
        <label asp-for="Description"></label>
        @* <textarea type="text" name="Description" class="form-control"></textarea> *@
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        @* <label for="ImageUrl">ImageUrl</label> *@
        <label asp-for="ImageUrl"></label>
        @* <input type="text" name="ImageUrl" class="form-control" /> *@
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        @* <label for="GenreId">GenreId</label> *@
        <label asp-for="GenreId"></label>
        <select asp-for="GenreId" asp-items="@ViewBag.Genres" class="form-control">
            <option selected disabled>Seçiniz..</option>
            @* <option value="1">Macera</option>
            <option value="2">Savaş</option>
            <option value="3">Romantik</option> *@
        </select>
        <span asp-validation-for="GenreId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>